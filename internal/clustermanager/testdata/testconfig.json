{
  "budgets": {
    "testcluster-partition": {
      "max_power_budget": 2000.0
    }
  },
  "clusters": [
    {
      "cluster": "fritz",
      "subcluster": "main",
      "hostRegex": "^f\\d\\d\\d\\d$",
      "powerBudgetTotal": 1000,
      "devicetypes": {
        "socket": {
          "scope": "node",
          "aggregator": {
            "type": "last",
            "powerMetric": "cpu_energy",
            "performanceMetric": "instructions",
            "deviceType": "socket"
          },
          "controlName": "rapl.pkg_power_limit1",
          "intervalConverged": "10m",
          "intervalSearch": "2m",
          "tolerance": 5,
          "borders": {
            "lower": 60,
            "upper": 700
          }
        }
      }
    }
  ]
}
