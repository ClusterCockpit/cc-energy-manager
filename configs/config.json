{
  "receivers": {
    "testnats": {
      "type": "nats",
      "address": "nats-server.example.org",
      "port": "4222",
      "subject": "subject"
    }
  },
  "sinks": {
    "testoutput": {
      "type": "stdout",
      "meta_as_tags": []
    }
  },
  "clusters": [
    {
      "cluster": "fritz",
      "subcluster": "main",
      "devicetypes" : {
        "socket" : {
          "scope": "node",
          "aggregator": {
            "type": "last",
            "powerMetric": "cpu_energy",
            "performanceMetric": "instructions",
            "deviceType": "socket"
          },
          "controlName": "rapl.pkg_power_limit1",
          "intervalConverged": "10m",
          "intervalSearch": "2m",
          "tolerance": 5,
          "borders": {
            "lower": 60,
            "upper": 700
          }
        }
      }
    },
    {
      "cluster": "alex",
      "subcluster": "a100",
      "devicetypes": {
        "nvidia_gpu" : {
          "scope": "device",
          "aggregator": {
            "type": "last",
            "powerMetric": "acc_power",
            "performanceMetric": "kernels",
            "deviceType": "nvidia_gpu"
          },
          "controlName": "nvml.power_limit",
          "intervalConverged": "5m",
          "intervalSearch": "2m",
          "tolerance": 5,
          "borders": {
            "lower": 80,
            "upper": 1000
          }
        },
        "socket" :{
          "cluster": "alex",
          "subcluster": "a100",
          "scope": "job",
          "aggregator": {
            "type": "median",
            "powerMetric": "cpu_energy",
            "performanceMetric": "instructions",
            "deviceType": "nvidia_gpu",
            "windowSize": 5
          },
          "controlName": "rapl.pkg_power_limit1",
          "intervalConverged": "5m",
          "intervalSearch": "2m",
          "tolerance": 5,
          "borders": {
            "lower": 123,
            "upper": 800
          }
        }
      }
    }
  ]
}
